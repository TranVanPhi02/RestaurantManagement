@{
    ViewData["Title"] = "Create Order | Reg";
    Layout = "CustomerLayout";
}

@if (ViewBag.IsLogin == true)
{
    <partial name="/Views/Shared/HeaderCustomer.cshtml" />
}
else
{
    <partial name="/Views/Shared/HeaderGuest.cshtml" />
}
<!--=============================
BREADCRUMB START
==============================-->
<section class="page_breadcrumb" style="background: url(images/counter_bg.jpg);">
    <div class="breadcrumb_overlay">
        <div class="container">
            <div class="breadcrumb_text">
                <h1>user dashboard</h1>
                <ul>
                    <li><a href="index.html">home</a></li>
                    <li><a href="#">dashboard</a></li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!--=============================
BREADCRUMB END
==============================-->
<!--=========================
DASHBOARD START
==========================-->
<section class="dashboard mt_100 xs_mt_70 mb_100 xs_mb_70">
    <div class="container">
        <div class="dashboard_area">
            <div class="row">
                <div class="col-xl-3 col-lg-4 wow fadeInUp" data-wow-duration="1s">
                    <div class="dashboard_menu">
                        <div class="dasboard_header">
                            <div class="dasboard_header_img">
                                <img src="@Model.Customer.Image" alt="user" class="img-fluid w-100">
                                <label for="upload"><i class="far fa-camera"></i></label>
                                <input type="file" id="upload" hidden>
                            </div>
                            <h2>@Model.Customer.Name</h2>
                        </div>
                        <ul>

                            <li>
                                <a href="/customer/profile"><span><i class="fas fa-user"></i></span>Info</a>
                            </li>
                            <li>
                                <a href="@Url.Action("OrderList", "Customer")">
                                    <span><i class="fas fa-bags-shopping"></i></span>
                                    Order
                                </a>
                            </li>

                            <li>
                                <a href="dashboard_review.html"><span><i class="fas fa-star"></i></span> Reviews</a>
                            </li>
                            <li>
                                <a href="dashboard_change_password.html">
                                    <span>
                                        <i class="fas fa-user-lock"></i>
                                    </span> Change Password
                                </a>
                            </li>
                            <li><a href="/customer/logout"><span> <i class="fas fa-sign-out-alt"></i></span> Logout</a></li>

                        </ul>
                    </div>
                </div>
                <div class="col-xl-9 col-lg-8 wow fadeInUp" data-wow-duration="1s">
                    <div class="dashboard_content">
                        <div class="dashboard_body">
                            <h3>Order Details</h3>
                            <div class="invoice">
                                <a class="go_back" href="dashboard_order.html">
                                    <i class="fas fa-long-arrow-alt-left"></i> go back
                                </a>
                                <div class="track_order">
                                    <ul>
                                        <li class="active">order pending</li>
                                        <li>order accept</li>
                                        <li>order process</li>
                                        <li>on the way</li>
                                        <li>Completed</li>
                                    </ul>
                                </div>
                                <div class="invoice_header">
                                    <div class="header_address">
                                        <h4>Invoice for Order ID: @Model.OrderId</h4>
                                        <p>Status: @Model.StatusOrder</p>
                                        <p>Date: @Model.CreateDate.ToString("yyyy-MM-dd")</p>
                                        <p>Total Price: @Model.TotalPrice</p>
                                    </div>

                                </div>
                                <div class="invoice_body">
                                    <div class="table-responsive">
                                        <table class="table table-striped">
                                            <tbody>
                                                <tr class="border_none">
                                                   
                                                    <th class="package">Dish</th>
                                                    <th class="price">Price</th>
                                                    <th class="qnty">Quantity</th>
                                                    <th class="total">Total</th>
                                                </tr>


                                                <tr>
                                                    @foreach (var detail in ViewBag.OrderDetails)
                                                    {
                                                        
                                                        <td class="package">
                                                            @detail.Menu.DishName
                                                        </td>
                                                        <td class="price">
                                                            <b>@detail.Menu.Price</b>
                                                        </td>
                                                        <td class="qnty">
                                                            <b>@detail.Quantity</b>
                                                        </td>
                                                        <td class="total">
                                                            <b>@(detail.Menu.Price * detail.Quantity)</b>
                                                        </td>
                                                    }
                                                </tr>
                                            </tbody>
                                           
                                        </table>
                                    </div>
                                </div>
                            
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--=========================
    DASHBOARD END
==========================-->
